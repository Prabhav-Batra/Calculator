<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFEEEE">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/displayBg"
            android:padding="24dp">
            <TextView
                android:id="@+id/previousCalculationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#FFFFFF"
                android:text="0"
                android:textStyle="bold"
                android:textSize="48sp"
                android:maxLines="1"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_margin="16dp"
       app:cardElevation="8dp"
       app:cardCornerRadius="24dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/cardView">
       <GridLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:columnCount="4"
           android:rowCount="5"
           android:padding="16dp">

           <Button
               android:id="@+id/btnClear"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_clear_background"
               android:text="C" />
           <Button
               android:id="@+id/btnBackspace"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="âŠ²" />
           <Button
               android:id="@+id/btnPercentage"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="%" />
           <Button
               android:id="@+id/btnDivide"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="/" />
           <Button
               android:id="@+id/btn7"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="7" />
           <Button
               android:id="@+id/btn8"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="8" />
           <Button
               android:id="@+id/btn9"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="9" />
           <Button
               android:id="@+id/btnMultiply"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="*" />
           <Button
               android:id="@+id/btn4"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="4" />
           <Button
               android:id="@+id/btn5"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="5" />
           <Button
               android:id="@+id/btn6"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="6" />
           <Button
               android:id="@+id/btnMinus"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="-" />
           <Button
               android:id="@+id/btn1"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="1" />
           <Button
               android:id="@+id/btn2"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="2" />
           <Button
               android:id="@+id/btn3"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="3" />
           <Button
               android:id="@+id/btnPlus"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_operator_background"
               android:text="+" />
           <Button
               android:id="@+id/btn0"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="2"
               android:layout_columnSpan="2"
               android:background="@drawable/button_background"
               android:text="0" />

           <Button
               android:id="@+id/btnDot"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_background"
               android:text="." />
           <Button
               android:id="@+id/btnEqual"
               style="@style/CalculatorButton"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:background="@drawable/button_equal_background"
               android:text="=" />





       </GridLayout>
   </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>